<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    tools:context="com.example.shweta.sharemytrip.Signup"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:src="@drawable/submitnow"
        android:background="#ffffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/fillfirstname"
        android:hint="First Name"
        android:layout_below="@+id/imageView5"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/filllastname" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/fillusername"
        android:hint="User Name"
        android:layout_below="@+id/fillemail"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/fillemail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/filladdress"
        android:hint="Address"
        android:layout_below="@+id/fillpassword"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/fillpassword" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/fillphone"
        android:hint="Phone Number"
        android:layout_below="@+id/filladdress"
        android:layout_alignEnd="@+id/filladdress" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fillaboutme"
        android:hint="About Me"
        android:layout_below="@+id/fillphone"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fillgender"
        android:hint="Gender"
        android:layout_below="@+id/filladdress"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/imageButton" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView5"
        android:src="@drawable/images2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/fillpassword"
        android:hint="Password"
        android:layout_below="@+id/fillusername"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/fillusername" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/filllastname"
        android:layout_below="@+id/fillfirstname"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:hint="Last Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/fillemail"
        android:hint="Email"
        android:layout_below="@+id/filllastname"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
