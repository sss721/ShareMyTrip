<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
   >

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/put_email"
        android:hint=" Email"
        android:layout_below="@+id/login_icon"
        android:layout_marginTop="67dp"
        android:layout_alignEnd="@+id/signup"
        android:layout_toEndOf="@+id/imageView3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/put_passwd"
        android:hint="Password"
        android:layout_marginTop="54dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageView4" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_icon"
        android:src="@drawable/images2"
        android:background="#00FFFFFF"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/signup" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/login_button"
        android:src="@drawable/arrow_blk"
        android:background="#00FFFFFF"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/put_passwd"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signup"
        android:src="@drawable/signup"
        android:background="#00FFFFFF"
        android:layout_alignBottom="@+id/login_button"
        android:layout_alignEnd="@+id/put_passwd" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView3"
        android:src="@drawable/login_icon"
        android:layout_alignBottom="@+id/put_email"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView4"
        android:src="@drawable/lock_icon"
        android:layout_alignBottom="@+id/put_passwd"
        android:layout_alignParentStart="true" />

</RelativeLayout>
